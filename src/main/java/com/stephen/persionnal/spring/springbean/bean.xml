<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="book" class="com.stephen.persionnal.spring.springbean.Book" scope="prototype">
        <property name="id" value="8"></property>
        <property name="title" value="烦恼"></property>
        <property name="author" value="stephen"></property>
        <property name="price" value="10"></property>
        <property name="sales" value="20"></property>
    </bean>

</beans>